<% console.log("locals: ",locals) %>
<body>
    <div class="header">
        <a href="/"><img src="/logo.png"></a>
        <form class="d-flex searchBar" method="GET" action="/busqueda">
          <input name="bus" class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
          <button class="button header__login" type="submit">Search</button>
        </form>
        <div>
            <% if(locals.correo) { %>
              <!-- Example single danger button -->
              <div class="userDivHeader">
                <!-- <i class='fas fa-user-circle' style='font-size:36px'></i> -->
                <a href="" data-bs-toggle="dropdown" aria-expanded="false" id="userIcon">
                  <% if(locals.imagen) { %>
                    <img src="data:image/png;base64,<%= locals.imagen %>" class="user_profile_icon"><i class='fas fa-angle-down'></i>
                  <% } else { %>
                    <i class='fas fa-user-circle user_profile_icon' style='font-size:40px'></i><i class='fas fa-angle-down'></i>
                  <% } %>
                </a>
                <ul class="dropdown-menu" aria-labelledby="userIcon">
                  <li><a class="dropdown-item user_menu_dropdown" href="/usuarios/<%= locals.correo %>">Ver Perfil <i class="fas fa-user-alt"></i></a></li>
                  <li><a class="dropdown-item user_menu_dropdown" href="/usuarios/editar-mi-perfil">Editar Perfil <i class="fas fa-user-edit"></i></a></li>
                  <li><a class="dropdown-item user_menu_dropdown" href="/preguntas/crear">Crear pregunta <i class="fa fa-code"></i></a></li>
                  <li><hr class="dropdown-divider"></li>
                  <li><a class="dropdown-item user_menu_dropdown" href="/logout">Cerrar sesion <i class="fa fa-sign-out"></i></a></li>
                </ul>
              </div>
            <% } else { %>
              <a class="button header__login" href="/login">Login</a>
              <a class="button header__registro" href="/sign-up_page">Registro</a>
            <% } %>

        </div>

    </div>
    

     



