
<%- include('partials/_header') %>



<div class="contenedor">

    <%- include('partials/_sidebar') %>


    <div class="main">
        <div class="content-container-index">
          <div class="pregsheader">
            <h5>Preguntas recientes</h5>
            <a class="btn btn-secondary" href="/preguntas/crear">Crear pregunta</a>
          </div>
            <br>
            <% if(preguntas.length == 0) { %>
              <h6>Lo siento, no se han encontrado preguntas...</h6>
            <% } %>


            <% preguntas.forEach(function(preg){ %>
                <div class="pregunta">
                  <a class="pregunta__titulo" href="/preguntas/mostrar/<%= preg.id %>"><%= preg.titulo %></a>
                  <div class="pregunta__descripcion"><%= preg.descripcion %></div>
                  
                  <div class="tagsynombrecontainer">
                    <div>
                      <% preg.etiquetas.forEach(function(etiqueta){ %>
                        <span class="pregunta__etiqueta"><%= etiqueta %></span>
                      <% }); %>
                    </div>
                    <div>
                      <span class="usernamelink"><img class="user_img" src="/user_icon.png"><%= preg.correo %></span>
                    </div>
                  </div>
                </div>
            <% }); %>


            <br>
            <%- include('partials/_pagination') %>
        </div>
    </div>
</div>
     
<%- include('partials/_footer') %>