<%- include('partials/_header') %>
        
<link rel="stylesheet" href="/stylesAtributoUsuario.css">  
<div class="contenedor">

  <%- include('partials/_sidebar') %>

    <div class="main">

      <% if (typeof error !== 'undefined' && error) { %>
        <div class="alert alert-danger mb-3" role="alert">
            <%= error %>
        </div>
      <% } else { %>
      <div class="content-container">
        <div class="card-usuario usuarioDiv">
          <div class="cabecera-usuario">
            <div class="avatar">
              <% if (usuario.imagen) { %>
                <img src="data:image/png;base64,<%= usuario.imagen %>" width="100" height="100"/>
              <% } else { %>
                <i class='fas fa-user-circle' style='font-size:95px'></i>
              <% } %>
            </div>
          </div>
      
          <h3><%= usuario.nombre %></h3>
          <div class="desc">
            <% if (usuario.bio) { %>
              <%= usuario.bio %>
            <% } else { %>
              (El usuario no tiene bio)
            <% } %>
          </div>
          <div class="pie-usuario">
            <h5><%= usuario.correo %></h5>
          </div>
          
        </div>
      
      </div>
      </div>
    <% } %>

    </div>
</div>
    
<%- include('partials/_footer') %>