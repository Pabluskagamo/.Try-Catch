<%- include('partials/_header') %>
        
<link rel="stylesheet" href="/stylesAtributoUsuario.css">  
<div class="contenedor">

    <div class="sidebar">
        
    </div>

    <div class="main">

      <% if (typeof error !== 'undefined' && error) { %>
        <div class="alert alert-danger mb-3" role="alert">
            <%= error %>
        </div>
    <% } else { %>

        
  
            <div class="card-usuario">
              <div class="cabecera-usuario">
                <div class="avatar">
                  <img src="" alt="" />
                </div>
              </div>
          
              <h3><%= usuario.nombre %></h3>
              <div class="desc">
                <% if (usuario.bio) { %>
                  <%= usuario.bio %>
                <% } else { %>
                  (El usuario no tiene bio)
                <% } %>
              </div>
              <div class="pie-usuario">
                <h5><%= usuario.correo %></h5>
              </div>
              
            </div>
          
          </div>
    <% } %>

    </div>
</div>
    
<%- include('partials/_footer') %>